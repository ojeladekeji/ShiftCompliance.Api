

@model ShiftCompliance.Web.Models.Vm.ProductionListPageVm

<h2>Production List</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-2">
        <label class="form-label">From</label>
        <input type="date" name="DateFrom" class="form-control"
               value="@(Model.Query.DateFrom?.ToString("yyyy-MM-dd"))" />
    </div>

    <div class="col-md-2">
        <label class="form-label">To</label>
        <input type="date" name="DateTo" class="form-control"
               value="@(Model.Query.DateTo?.ToString("yyyy-MM-dd"))" />
    </div>

    <div class="col-md-2">
        <label class="form-label">Shift</label>
        <!-- Use asp-for to auto-select; keep name=Shift for flat query binding -->
        <select asp-for="Query.Shift" name="Shift" class="form-select">
            <option value="">All</option>
            <option value="Morning">Morning</option>
            <option value="Afternoon">Afternoon</option>
            <option value="Night">Night</option>
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Supervisor</label>
        <input type="text" name="Supervisor" class="form-control"
               value="@(Model.Query.Supervisor)" placeholder="Name contains..." />
    </div>

    <div class="col-md-2">
        <label class="form-label">Compliance</label>
        <!-- Same idea: asp-for for selection; name=Compliance for flat query -->
        <select asp-for="Query.Compliance" name="Compliance" class="form-select">
            <option value="All">All</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="col-md-1 d-flex align-items-end">
        <button class="btn btn-primary w-100" type="submit">Search</button>
    </div>
</form>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>No</th>
            <th>Description</th>
            <th>Shift</th>
            <th>Supervisor</th>
            <th>Posting Date</th>
            <th>Compliance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model.Items)
    {
        <tr>
            <td>@r.No</td>
            <td>@r.Description</td>
            <td>@r.Shift</td>
            <td>@r.ShiftSupervisor</td>
            <td>@(r.PostingDateUtc)</td>
            <td>
                @if (r.IsCompliant is true)
                {
                    <span class="badge bg-success">Compliant</span>
                }
                else if (r.IsCompliant is false)
                {
                    <span class="badge bg-danger">Non-compliant</span>
                }
                else
                {
                    <span class="badge bg-secondary">N/A</span>
                }
            </td>
            <td>
                <a asp-controller="Production" asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @{
                // helper to preserve filters when paging
                string qs(int page) =>
                    $"?DateFrom={Model.Query.DateFrom:yyyy-MM-dd}&DateTo={Model.Query.DateTo:yyyy-MM-dd}&Shift={Model.Query.Shift}&Supervisor={Model.Query.Supervisor}&Compliance={Model.Query.Compliance}&Page={page}&PageSize={Model.Query.PageSize}";
            }
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="@qs(Model.Page - 1)">«</a>
            </li>
            @for (int p = 1; p <= Model.TotalPages; p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link" href="@qs(p)">@p</a>
                </li>
            }
            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@qs(Model.Page + 1)">»</a>
            </li>
        </ul>
    </nav>
}
