@model ShiftCompliance.Web.Models.Vm.BudgetManageVm
@{
    ViewData["Title"] = "Manage Shift Budgets";
}

<h2>Manage Shift Budgets</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Err"] != null || ViewBag.Error != null)
{
    <div class="alert alert-danger">@TempData["Err"] @ViewBag.Error</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">From</label>
        <input type="date" class="form-control" name="from" value="@Model.From:yyyy-MM-dd" />
    </div>
    <div class="col-auto">
        <label class="form-label">To</label>
        <input type="date" class="form-control" name="to" value="@Model.To:yyyy-MM-dd" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-secondary">Apply</button>
    </div>
</form>

<div class="card mb-4">
    <div class="card-header">Add / Update Budget</div>
    <div class="card-body">
        <form asp-action="Upsert" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-auto">
                <label class="form-label">Date</label>
                <input type="date" class="form-control" name="Date" value="@Model.NewBudget.Date:yyyy-MM-dd" required />
            </div>
            <div class="col-auto">
                <label class="form-label">Shift</label>
                <select class="form-select" name="Shift">
                    <option>Morning</option>
                    <option>Afternoon</option>
                    <option>Night</option>
                </select>
            </div>
            <div class="col-auto">
                <label class="form-label">Target Qty</label>
                <input type="number" step="0.01" class="form-control" name="TargetQty" value="@Model.NewBudget.TargetQty" required />
            </div>
            <div class="col-3">
                <label class="form-label">Remark</label>
                <input class="form-control" name="Remark" value="@Model.NewBudget.Remark" />
            </div>
            <div class="col-auto align-self-end">
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:140px">Date</th>
            <th style="width:140px">Shift</th>
            <th style="width:160px" class="text-end">Target Qty</th>
            <th>Remark</th>
            <th style="width:90px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Date</td>
                <td>@r.Shift</td>
                <td class="text-end">@r.TargetQty</td>
                <td>@r.Remark</td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this budget?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.Id" />
                        <input type="hidden" name="from" value="@Model.From.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="to" value="@Model.To.ToString("yyyy-MM-dd")" />
                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
